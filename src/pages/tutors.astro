---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Meet Our Tutors" description="Meet the experienced and specialist tutors at New Leaf Academy." />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<body>
		<Header />
		<main>
			<h1>Meet Our Tutors</h1>
			<p>Our team is made up of passionate, specialist tutors who are dedicated to your success. Each tutor brings a wealth of experience and a fresh approach to education, ensuring every session is engaging and effective.</p>

			<div class="tutor-card">
				<img src="/danthomas.png" alt="Dan Thomas Headshot" class="tutor-headshot" />
				<div class="tutor-info">
					<h2>Dan Thomas</h2>
					<p>Specialising in <strong>mathematics</strong> and <strong>science</strong> for GCSE with <strong>A level physics</strong> and <strong>mathematics</strong>.</p>
				</div>
			</div>

			<div class="tutor-card">
				<img src="/kai-headshot.jpg" alt="Kai McKim Headshot" class="tutor-headshot" />
				<div class="tutor-info">
					<h2>Kai McKim</h2>
					<p>Specialising in <strong>English literature</strong> and <strong>language</strong> for GCSE and A level.</p>
				</div>
			</div>

			<div class="tutor-card">
				<img src="/marcus-headshot.jpg" alt="Marcus Rees Headshot" class="tutor-headshot" />
				<div class="tutor-info">
					<h2>Marcus Rees</h2>
					<p>Specialising in <strong>business studies</strong>, <strong>economics</strong>, <strong>mathematics</strong> and <strong>science</strong> for GCSE and <strong>A level mathematics</strong> and <strong>economics</strong>.</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
    /* CSS Variables for easy theme changes */
    :root {
		--primary-color: #2c4fb9;
		--text-color: #333;
		--card-bg-color: #f9f9f9;
        --border-color: #ddd;
        --box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
	}

	body {
		font-family: sans-serif;
		line-height: 1.6;
		color: var(--text-color);
		margin: 0;
		padding: 0;
	}

	main {
		max-width: 800px;
		margin: 2em auto;
		padding: 0 1em;
	}

	h1 {
		color: var(--primary-color) !important;
		font-size: 2.5em;
		text-align: center;
		margin-bottom: 0.5em;
	}
	
    p {
        font-size: 1.1em;
    }

	.tutor-card {
		display: flex;
		align-items: center;
		gap: 20px;
		margin: 2em 0;
		padding: 1.5em;
		background-color: var(--card-bg-color);
		border: 1px solid var(--border-color);
		border-radius: 10px;
		box-shadow: var(--box-shadow);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

    .tutor-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
    }
    
	.tutor-headshot {
		width: 150px;
		height: 150px;
		object-fit: cover;
		border-radius: 50%;
		border: 4px solid var(--primary-color);
	}
	
	.tutor-info {
		flex-grow: 1;
	}
	
	.tutor-info h2 {
		color: var(--primary-color);
		margin: 0 0 0.5em 0;
		font-size: 2em;
	}
	
	.tutor-info p {
		margin: 0;
		color: var(--text-color);
	}
	
	/* --- Media Queries for Mobile/Tablet Optimization --- */
	
    @media (max-width: 768px) {
		main {
			padding: 0 1.5em; 
		}

		h1 {
			font-size: 2.2em;
		}
		
		.tutor-card {
			gap: 15px;
			padding: 1em;
		}

		.tutor-headshot {
			width: 120px;
			height: 120px;
		}
		
		.tutor-info h2 {
			font-size: 1.8em;
		}
	}

	@media (max-width: 500px) {
		main {
			padding: 0 0.5em;
		}

		.tutor-card {
			flex-direction: column;
			text-align: center;
			gap: 15px;
		}

		.tutor-headshot {
			width: 100px;
			height: 100px;
			margin-bottom: 0.5em;
		}

		.tutor-info h2 {
			font-size: 1.5em;
		}
	}
</style>