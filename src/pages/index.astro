---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import TestimonialCarousel from '../components/TestimonialCarousel.astro';

// 1. Import the Image component and your banner image
import { Image } from 'astro:assets';
import bannerImage from '../assets/banner.png';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- The banner is now the first element inside main -->
			<Image
				src={bannerImage}
				alt="An engaging banner for New Leaf Academy showing students learning"
				class="banner-image"
			/>

			<!-- The main heading is now the tagline -->
			<h1 class="tagline">
				Grow with Confidence
			</h1>
			<p>
			Unlock potential with expert online tutoring. ðŸŽ“ Personalized, confidence-building tuition in Maths, English, Science, & more, from KS3 to A-level.
			</p>
			<a href="/consultation" class="cta-button">
				Book your free consultation and taster session now!
			</a>
		</main>

		<TestimonialCarousel />
		<Footer />
	</body>
</html>

<style>
	/* Simplify styles as global.css now handles the main layout */
	main {
		/* Center all content within the main content block */
		text-align: center;
		color: var(--accent);
	}

	.banner-image {
		/* Make it smaller and centered */
		max-width: 430px; /* Adjust this value as needed */
		width: 100%; /* Ensures it's responsive on smaller screens */
		height: auto;
		display: block;
		margin: 0 auto 2em; /* Centers horizontally, adds space below */
		border-radius: 12px; /* Adds soft corners */
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Adds a subtle shadow */
	}

	/* Style for the new, larger tagline */
	.tagline {
		font-size: clamp(1.6em, 4vw, 2.2em); /* Responsive font size */
		line-height: 1.2;
		margin-bottom: 0.5em;
		font-weight: 700; /* Make it bold */
	}

	.cta-button {
		display: inline-block;
		margin-top: 2em;
		padding: 1em 2em;
		background-color: var(--accent);
		color: white;
		font-weight: bold;
		text-decoration: none;
		border-radius: 8px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.cta-button:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
	}
</style>

